				<!--List of fields to render -->
				<field-visibility>
					<show id="bpm:workflowDescription" />
					<show id="bpm:workflowDueDate" />
					<show id="bpm:assignee" />
					<show id="alvexwf:assignees" />
					<show id="alvexwf:description" />
					<show id="packageItems" />
					<show id="alvexwf:confirmationRequired" />
				</field-visibility>
				<!--Fields appearance configuration -->
				<appearance>
					<!--Sets definition -->
					<set id="task-info" appearance="" template="/org/alfresco/components/form/2-column-set.ftl"/>
					<set id="documents" appearance="" />
					<set id="options" appearance="" />
					<!--Fields -->
					<field id="bpm:workflowDescription" label-id="label.title" set="task-info" mandatory="true" help="">
						<control template="/org/alfresco/components/form/controls/textfield.ftl">
							<control-param name="style">width: 98%</control-param>
						</control>
					</field>
					<field id="bpm:workflowDueDate" label-id="alvex.workflow.task-due-date" set="task-info" />
					<field id="bpm:assignee" label-id="alvex.workflow.bpm_assignee" set="task-info">
						<control template="/orgchart-picker.ftl" />
					</field>
					<field id="alvexwf:assignees" label-id="alvex.workflow.bpm_assignees" set="task-info">
						<control template="/orgchart-picker.ftl" />
					</field>
					<field id="alvexwf:description" label-id="label.description" set="documents">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="style">width: 98%</control-param>
						</control>
					</field>
					<field id="packageItems" label-id="alvex.workflow.related-documents" set="documents">
						<control template="/alvex-uploader.ftl">
							<control-param name="uploadDirectory">uploads</control-param>
							<control-param name="createUploadDirectory">true</control-param>
						</control>
					</field>
					<field id="alvexwf:confirmationRequired" label-id="alvex.workflow.alvexwf_confirmationRequired" set="documents" />
				</appearance>
			</form>
		</forms>
	</config>
	
	<!--Form config for alvexwf:executeTask rendering -->
	<config evaluator="task-type" condition="alvexwf:executeTask">
		<forms>
			<form>
				<!--List of fields to render -->
				<field-visibility>
					<show id="alvexwf:description" />
					<show id="packageItems" />
					<show id="transitions" />
				</field-visibility>
				<!--Fields appearance configuration -->
				<appearance>
					<!--Sets definition -->
					<set id="documents" appearance="" />
					<!--Fields -->
					<field id="alvexwf:description" label-id="label.description" set="documents" read-only="true">
						<control template="/alvex-mltext.ftl">
							<control-param name="style">width: 98%</control-param>
						</control>
					</field>
					<field id="packageItems" label-id="alvex.workflow.related-documents" set="documents">
						<control template="/alvex-uploader.ftl">
							<control-param name="uploadDirectory">uploads</control-param>
							<control-param name="createUploadDirectory">true</control-param>
						</control>
					</field>
					<field id="transitions" set="documents" />
				</appearance>
			</form>
		</forms>
	</config>
	
