<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
   <template-type>alvex/documentsregister</template-type>
   <properties>
      <pageFamily>documentsregister</pageFamily>
      <container>dataLists</container>
   </properties>
   <components>

      <!-- Title -->
      <component>
         <region-id>title</region-id>
         <url>/components/title/collaboration-title</url>
      </component>

      <!-- Navigation -->
      <component>
         <region-id>navigation</region-id>
         <url>/components/navigation/collaboration-navigation</url>
      </component>

      <!-- Toolbar -->
      <component>
         <region-id>toolbar</region-id>
         <url>/components/data-lists/toolbar</url>
         <properties>
            <registryConfig>true</registryConfig>
         </properties>
      </component>

      <!-- Datagrid -->
      <component>
         <region-id>datagrid</region-id>
         <url>/components/data-lists/datagrid</url>
         <properties>
            <pagination>true</pagination>
         </properties>
      </component>

      <!-- Datalist -->
      <component>
         <region-id>register-list</region-id>
         <url>/components/data-lists/datalists</url>
         <properties>
            <listTypesToShow>(alvexdr|alvexdt|document)</listTypesToShow>
            <listContainerType>alvexdr:documentRegister</listContainerType>
            <dlUrlTemplate>documentsregister?register=</dlUrlTemplate>
         </properties>
      </component>

      <!-- Actions Common -->
      <component>
         <region-id>actions-common</region-id>
         <url>/components/data-lists/actions-common</url>
      </component>

   </components>
</template-instance>

